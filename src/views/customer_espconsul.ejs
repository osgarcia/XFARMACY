                      <option class="formkit-option" value="N">NO</option>
                    </select>
                  </div>
                </div>
              </div>

                <div class="col-md-6 mb-3">
                  <div class="form-outline">
                      <label class="formkit-label" for="input_0"><b>Especialidad</b></label>
                      <div class="formkit-inner">
                        <select class="formkit-input" id="input_0" name="Tipespec">
                          <option class="formkit-option text-center" value=""></option>
                          <option class="formkit-option text-center" value="GIN">Ginecologia</option>
                          <option class="formkit-option text-center" value="OBS">Obstetricia</option>
                          <option class="formkit-option text-center" value="CAR">Cardiologia</option>
                          <option class="formkit-option text-center" value="NEU">Neurologia</option>
                          <option class="formkit-option text-center" value="ORT">Ortopedia</option>
                          <option class="formkit-option text-center" value="PSI">Psicologia</option>
                          <option class="formkit-option text-center" value="NUT">Nutricion</option>
                        </select>
                      </div>
                    </div>
                  </div>
        </div>

                    <div class="form-group text-center">
                      <input type="text" name="stcconsul"  value="E" class="form-control text-center" style="display:none">
              
                  </div>

                  <div class="row text-center">
                    <div class="col-md-6 mb-3">
                      <div class="form-outline">
                <label class="formkit-label" for="input_0"><b>Motivo De Consulta</b></label>
                <textarea type="text" name="Moticonsul" rows="10" cols="40"  class="form-control"></textarea>
              </div>
            </div>

            <div class="col-md-6 mb-3">
              <div class="form-outline">
                <label class="formkit-label" for="input_0"><b>Historial De Enfermedad</b></label>
                <textarea type="text" name="Histenf" rows="10" cols="40"  class="form-control"></textarea>
              </div>
            </div>

                <p> 
                    </p>

                   
                    <div class="form-group text-center">
            <button type="submit" class="btn btn-success text-center">
                Guardar Cambios
            </button>
                    </div>
        </form>

        <script type="text/javascript">
          window.onload=function(){//from ww  w . j  a  va2s. c  o  m
      var today = new Date().toISOString().split('T')[0];
      document.getElementsByName("Fecconsul")[0].setAttribute('min', today);
          }
      
            </script> 
