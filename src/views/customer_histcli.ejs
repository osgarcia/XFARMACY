<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

    <link href="/assets/img/favico.ico" rel="icon">
    
    <title>MED | Historial</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/litera/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  </head>
  <body class="bg-dark-200">
    <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#"><h1><font color="white">MED</font></h1></a>
          <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav me-auto">
            </ul>
          </div>
        </div>
      </nav>
      <div class="container mt-5">
        <div class="row">
            <div class="col-md-15">
                <div class="card">
                    <div class="card-body">
                        <form action="/history" method="get">
                            <b><label class="formkit-label" for="input_0"><h5>Consultas</h5></label></b>
                             <p>
                                <table id = "consultas" class="table table-bordered table-hover text-center">
                                    <thead>
                                        <tr class="table-info">
                                           
                                            <th>
                                                Nombre Paciente
                                            </th>
                                            <th>
                                                Fecha Consulta
                                            </th>
                                            <th>
                                                Estado Consulta
                                            </th>
                                            <th>
                                                Motivo De Consulta
                                            </th>

                                            <th>
                                                Historia Enfermedad
                                            </th>
                                            <th>
                                                Laboratorios
                                            </th>

                                            <th>
                                                Plan Terapeutico
                                            </th>

                                            <th>
                                                Consulta General
                                            </th>

                                            <th>
                                                Especialista
                                            </th>
                               
                                            <th>
                                                Receta
                                            </th>

                                            <th>
                                                Finalizar Consulta
                                            </th>
                                            
                                    </thead>
                        </p>

                        <tbody> 
                            <% if (data) { %>
                                <% for (var i = 0; i < data.length; i++) { %>
                                <tr>
                            
                 
                                    <td><%= data[i].Nocli %></td>
                                    <td><%= data[i].Fecconsul %></td>
                                    <td><%= data[i].stcconsul %></td>
                                    <td><%= data[i].Moticonsul %></td>
                                    <td><%= data[i].Histenf %></td>
                                    <td><%= data[i].Dlabs %></td>
                                    <td><%= data[i].Plterau %></td>

                                    <td>  
                                        <p><a href="/upconsul/<%= data[i].Idcon %>" class="btn btn-outline-danger"><i class="fa-solid fa-suitcase-medical fa-2xl"></i></a>
                                        </p>      
                                    </td>

                                    <td>  
                                        <p><a href="/refespe/<%= data[i].Idcon %>" class="btn btn-outline-dark"><i class="fa-solid fa-user-doctor fa-2xl"></i></i></a>
                                        </p>      
                                    </td>

                                    <td>  
                                        <p><a href="/clirecet/<%= data[i].Idcon %>" class="btn btn-outline-warning"><i class="fa-solid fa-syringe fa-2xl"></i></a>
                                        </p>      
                                    </td>

                                    <td>  
                                        <p><a href="/fnconsul/<%= data[i].Idcon %>" class="btn btn-outline-success"><i class="fa-solid fa-check-double fa-2xl"></i></a>
                                        </p>      
                                    </td>

                                </tr>
                                <% } %>
                                <% } %>
                                    </tbody>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>


<script>
var table = new DataTable('#consultas', {
    pageLength: 5,
    lengthMenu: [[5, 10, 20], [5, 10, 20]],
    language: {
        url: '//cdn.datatables.net/plug-ins/1.13.5/i18n/es-ES.json',
    },
})
</script>

  </body>
</html>